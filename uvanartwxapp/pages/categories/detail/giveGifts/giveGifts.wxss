/* 好友拆礼 B*/

.open-presents {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 100rpx;
}

.open-presents .gift-state {
  color: #aaa;
  font-size: 24rpx;
  text-align: center;
}

.open-presents .gift-state .ongoing {
  color: #222;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

