/*search bar*/
.search{
	box-sizing: border-box;
	height: 90rpx;
	background: #fff;
	padding: 20rpx 30rpx;
	padding-bottom: 0rpx;
	overflow: hidden;
	/*position: relative;*/
}
.search .searchBtn{
	box-sizing: border-box;
	font-size: 28rpx;
	background-color: #e9e9e9;
	border-radius: 8rpx;
	padding-left: 80rpx;
	height: 60rpx;
	width: 88%;
	float: left;
}
.search .icon-sousuo{
	height: 60rpx;
	line-height: 60rpx;
	font-size: 50rpx;
	float: left;
	position: absolute;
	left: 44rpx;
	color: #888;
}
.search .sBtn{
	box-sizing: border-box;
	font-size: 28rpx;
	text-align: center;
	float: right;
	height: 60rpx;
	width: 10%;
	line-height: 60rpx;
	/*position: relative;*/
	/*top: 6rpx;*/
}

.history{
	width: 100%;
	margin-bottom: 20rpx;
}
.history .title{
	box-sizing: border-box;
	width: 100%;
	padding: 20rpx 30rpx;
	overflow: hidden;
}
.history .title .icon-sousuo{
	float: left;
	font-size: 52rpx;
}
.history .title .icon-remen{
	float: left;
	font-size: 52rpx;
}
.history .title .icon-shanchu{
	float: right;
	font-size: 36rpx;
	line-height: 56rpx;
}
.history .title .text{
	float: left;
	font-size: 28rpx;
	line-height: 56rpx;
}
.history .content{
	box-sizing: border-box;
	width: 100%;
	padding-left: 30rpx;
	padding-right: 30rpx;
}
.history .content .record{
	box-sizing: border-box;
	display: inline-block;
	border: 2rpx solid #ccc;
	border-radius: 6rpx;
	padding: 8rpx 10rpx;
	margin-right: 20rpx;
	margin-bottom: 30rpx;
	font-size: 24rpx;
}