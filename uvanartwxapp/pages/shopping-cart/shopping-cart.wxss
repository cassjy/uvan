  width: 720rpx;
  height: 720rpx;
}

.shopping-cart-loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.shopping-cart-unauthorized {
  display: flex;
  flex-direction: column;
  justify-content: center;
