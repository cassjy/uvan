/* pages/me/myalbumAndRecycle/myalbumAndRecycle.wxss */
page{
  background: #f8f8f8;
}
.has-picture .edit-tapbar{
  height: 120rpx;
  padding:0 40rpx;
  background: #fff;
}
.has-picture .videolist{
  width: 670rpx;
  height: 376rpx;
  position: relative;
  margin: 40rpx 40rpx 0 40rpx;
}
.download-img{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  padding: 10rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 100;
}
.edit-tapbar .album{
  display: inline-block;
  margin:40rpx 40rpx 40rpx 0;
  line-height: 1;
  font-size: 40rpx;
  color: #424242;
  font-weight: bold;

}
.edit-tapbar .album-unselect{
  display: inline-block;
  margin: 45rpx 40rpx 45rpx 0;
  line-height: 1;
  font-size: 28rpx;
  color: #888;
}
.edit-tapbar .recycle{
  display: inline-block;
  margin: 40rpx 40rpx 40rpx 0;
   line-height: 1;
  font-size: 40rpx;
  color: #424242;
  font-weight: bold;
}
.edit-tapbar .recycle-unselect{
  display: inline-block;
  margin: 45rpx 40rpx 45rpx 0;
  line-height: 1;
  font-size: 28rpx;
  color: #888;
}
.edit-tapbar .video{
  display: inline-block;
  margin: 40rpx 40rpx 40rpx 0;
   line-height: 1;
  font-size: 40rpx;
  color: #424242;
  font-weight: bold;
}
.edit-tapbar .video-unselect{
  display: inline-block;
  margin: 45rpx 40rpx 45rpx 0;
  line-height: 1;
  font-size: 28rpx;
  color: #888;
}
.icon-xiugai{
  display: inline-block;
  width: 40rpx;
  float: right;
  line-height: 120rpx;
  font-size: 35rpx;
  color: #888;
}
.masonry{
  display: flex;
  justify-content: space-between;
  background-color: #f8f8f8;
  padding:10rpx;
}
.item {
  width: calc(100%/3);
}
.item view{
  padding:10rpx 10rpx 0;
  position: relative;
}
.item image{
  width: 100%;
  height: auto;
  background: #ccc;
}
.item checkbox{
  position: absolute;
  border-radius: 100%;
  right: 0;
  top: 0;
  width: 50rpx;
  height: 50rpx;
  border: none;
}
.item checkbox image{
  position:absolute;
  right:14rpx;
  top: 16rpx;
  background:transparent;
}
.item checkbox .wx-checkbox-input{
   width: 42rpx;
   height: 42rpx;
   border-radius: 100%;
   background: rgba(0,0,0,0);
   border: none;
}
.item checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   background: rgba(0,0,0,0);
}
.bottom{
  height: 100rpx;
}
.icon-shangla{
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(50,50,50,0.6);
  border-radius: 100%;
  text-align: center;
  height: 60rpx;
  width: 60rpx;
  line-height: 60rpx;
  color: rgba(255,255,255,0.8);
  font-size:32rpx;
}
.hideDelete{
  bottom: -50vh !important;
}
.delete{
  transition: all 0.3s ease;
  height: 96rpx;
  position: fixed;
  width: 670rpx;
  bottom: 0;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items:center;
  font-size:32rpx;
  padding: 0 40rpx;
  color: #424242;
}
.delete view{
  text-align: center;
  color: #fff;
  height: 56rpx;
  line-height: 56rpx;
  width: 140rpx;
  border-radius:4rpx;
  background:#424242;
}
.delete checkbox{
  position: relative;
}
.delete checkbox image{
  background:transparent;
  width:48rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.delete checkbox .wx-checkbox-input{
   width: 42rpx;
   height: 42rpx;
   border: none;
   color:rgba(0,0,0,0);
   background:transparent;
}
.delete checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   width: 42rpx;
   height: 42rpx;
   color:rgba(0,0,0,0);
   background:transparent;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   width: 40rpx;
   height: 40rpx;
   color:rgba(0,0,0,0);
   background:transparent;
}
.download{
  margin:20rpx 40rpx 0 40rpx;
  color: #fff;
  font-size: 28rpx;
  background: #424242;
  height:80rpx;
  line-height: 80rpx;
}
.progress{
  position:fixed;
  top:40%;
  background:#fff;
  border-radius:8rpx;
  width:70%;
  z-index:100;
  text-align:center;
  height:16vh;
  left:15%;
  line-height:10vh;
  font-size:32rpx;
}
.progress progress{
  width:90%;
  margin:0 5%;
}
.progress-mode{
  position: fixed;
  background: rgba(0,0,0,0.4);
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
}
.progress .title{
  margin:20rpx 0;
  color:#424242;
  text-align: center;
}
.progress .progress-length{
  width:80%;
  height:40rpx;
  background:#eee;
  margin:50rpx 10%;
  border-radius:20rpx;
  overflow: hidden;
}
.progress .progress-length cover-view{
  background:#44B549;
  height: 40rpx;
  transition: all 1s;
 /*  background-image:linear-gradient(45deg, rgba(255, 255, 255, 0.14902) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.14902) 50%, rgba(255, 255, 255, 0.14902) 75%, transparent 75%, transparent); */
}