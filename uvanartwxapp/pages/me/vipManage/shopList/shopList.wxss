/* pages/shopInfo/vipManage/shopList/shopList.wxss */

.icon-rili, .icon-M-zanwujilu, .dowm-icon, .up-icon {
  font-family: "iconfont" !important;
  font-size: 38rpx;
  font-style: normal;
  color: #b7b4b4;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}

.icon-rili {
  display: flex;
  align-items: center;
  height: 50rpx;
  line-height: 50rpx;
  box-sizing: border-box;
}

.dowm-icon, .up-icon {
  position: absolute;
  color: #e9e6e6;
  bottom: -8rpx;
  left: 50%;
}

/* .up-icon{
  font-size: 44rpx;
} */

.icon-M-zanwujilu {
  font-size: 120rpx;
}

.dowm-icon::before {
  content: '\e640';
}

.up-icon::before {
  content: '\e728';
}

/*头部样式  */

page {
  min-height: 100%;
  background-color: #f8f8f8;
}

.record {
  background-color: #fff;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: #fff;
  border-top: 1rpx solid #f3f3f3;
}

.dateWrapper {
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 2rpx 2px 6rpx #f8f7f7;
}

.dateWrapper .text {
  width: 66rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #888;
  font-size: 28rpx;
}

.dateWrapper .startingTime, .dateWrapper .finishTime {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  /* margin: 0 6rpx; */
  padding-left: 18rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  background-color: #f0f0f0;
}

.time {
  color: #424242;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-qixian {
  color: #424242;
  font-size: 32rpx;
  margin-right: 40rpx;
  margin-bottom: 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.date .startingTime .time, .date .finishTime .time {
  font-size: 26rpx;
  /* margin-top: 8rpx; */
}

.date .text {
  height: 50rpx;
  line-height: 50rpx;
}

/*内容样式  */

.title {
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
  padding: 0 10rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #efebeb;
  border-top: 2rpx solid #efebeb;
}

.title .all, .title .effective, .title .invalid, .title .visitor, .title .start,
.title .pugongying {
  flex: 1;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
}

.content {
  padding-top: 140rpx;
}

.content .wrapper {
  padding: 20rpx;
  background-color: #f8f8f8;
}

.userInfo {
  color: #000;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  position: relative;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.userInfo:last-child {
  border-bottom: none;
  margin-bottom: 0rpx;
}

.show {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.hideen {
  padding-left: 98rpx;
}

.hideen .sxDate {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.hideen .belong {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.hideen .deadLine {
  font-size: 24rpx;
}

.change {
  color: #969595;
}

.touxiang {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.edit-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 18rpx;
  font-size: 40rpx;
  line-height: 80rpx;
  color: #424242;
}

.touxiang image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.info {
  color: #222;
  width: 100%;
  font-size: 28rpx;
}
.info view>text:first-child{
  width:140rpx;
  display:inline-block;
  text-align:right;
}
.info view>text:last-child{
  color: #888;
  display: inline-block;
  margin-left: 22rpx;
  font-size: 26rpx;
}
.info  .up {
  display: flex;
  justify-content: space-between;
  /* flex-direction: row; */
}
.info .nickname input{
  width:300rpx;
  text-align:center;
  color:#424242;
  font-size:26rpx;
  background:#eff3f7;
  margin-left:11px;
  padding-left:10rpx;
  overflow:visible; 
}
.info  .up .name {
  flex: 3;
  text-align: left;
}

/* .info  .up .name .wx {
  color: #888;
} */

.fwDate .wx {
  font-size: 28rpx;
  /* color: #888; */
}

.info  .up .category {
  flex: 2;
  text-align: right;
  margin-right: 25rpx;
}

.info  .up  .effect {
  flex: 1;
  text-align: right;
  padding-right: 8rpx;
  width: 60rpx;
}

.info .dowm {
  margin-top: 14rpx;
}

.info .dowm .fwDate {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.info .dowm .sxDate {
  margin-bottom: 8rpx;
}

.info .invitationTime {
  color: #222;
  font-size: 28rpx;
}

.invitationTime .nickname {
  color: #888;
  font-size: 26rpx;
  margin-left: 22rpx;
}

.right .num {
  font-size: 28rpx;
}

/*暂无传播记录  */

.noRecord {
  margin-top: 250rpx;
  text-align: center;
}

.noRecord .text {
  color: #928f8f;
  font-size: 28rpx;
}

/*数据加载动画  */

.dataLoading {
  position: fixed;
  top: 48%;
  left: 46%;
}

.dataLoading image {
  width: 60rpx;
  height: 60rpx;
}

/*上拉加载动画  */

.loadMore {
  width: 100%;
  height: 42rpx;
  padding: 10rpx 0;
  background: #f6f6f6;
}

.loadMore image {
  width: 200rpx;
  height: 42rpx;
  margin-left: 37%;
  display: inherit;
}

/*没有更多记录  */

.noMore {
  color: #b7b4b4;
  width: 100%;
  font-size: 26rpx;
  background-color: #f2f2f2;
  padding: 10rpx 0;
  text-align: center;
}

/*控制显示隐藏  */

.openData {
  display: block;
}

.closeData {
  display: none;
}

/*高亮  */

.highLight {
  color: red;
}

/* 弹窗样式 */

.modal-input {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  justify-content: flex-start;
  height: 80rpx;
  align-content: center;
}

.modal-input.date .startingTime {
  padding: 15rpx 0;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 40rpx;
}

.modal-input text:nth-of-type(1) {
  width: 130rpx;
}

.modal-input input {
  background-color: #fafafc;
  border: 1rpx #f0f0f0 solid;
  width: 300rpx;
  padding-left: 15rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.modal-input .startingTime {
  background-color: #fafafc;
  border: 1rpx #f0f0f0 solid;
  width: 300rpx;
}
