.card{
  margin: 0 40rpx;
  padding: 40rpx 0;
  border-bottom: 1px solid #eeeeee;
  position: relative;
  display:flex;
  align-items:center;
  justify-content: space-between;
}
.card .left .phone{
  font-size: 38rpx;
  color: #424242;
  font-weight:700;
  display:flex;
  align-items:center;
}
.card .left .date{
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #aaaaaa;

}
.card .right{
  display:flex;
  align-items:center;
  justify-content: space-between;
}
.card .right input{
  width:220rpx;
  font-weight:400;
  text-align: center;
  color:#424242;
  height:66rpx;
  line-height:66rpx;
  font-size: 32rpx;
  background: #eff3f7;
  margin-right:20rpx;
}
.card .right button{
  border:1px solid #d2d2d2;
  border-radius:0;
  width:140rpx;
  height:66rpx;
  line-height:66rpx;
  color:#424242;
  background:#fff;
  font-size:30rpx;
  margin: 0;
}
/* 撑起底部按钮高度 */
.btn-height{
  height: 138rpx;
}
.add-btn{
  height:96rpx;
  line-height:96rpx;
  margin:0 40rpx;
  background:#424242;
  color:#fff;
  font-size:28rpx;
  border-radius:0;
  position:fixed;
  bottom:40rpx;
  width:680rpx;
}
.bottom-btn{
  height:40rpx;
  background:#fff;
  position:fixed;
  bottom:0;
  width:750rpx;
}
button::after{ border: none; }
