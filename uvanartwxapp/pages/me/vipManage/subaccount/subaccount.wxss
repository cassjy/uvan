.loadMore {
  width: 100%;
  height: 42rpx;
  padding: 10rpx 0;
  background: #f6f6f6;
}

.loadMore image {
  width: 200rpx;
  height: 42rpx;
  margin-left: 37%;
  display: inherit;
}

/*没有更多  */

.noMore {
  font-size: 24rpx;
  width: 100%;
  text-align: center;
  color: #b1adad;
  padding: 8rpx 0;
}
