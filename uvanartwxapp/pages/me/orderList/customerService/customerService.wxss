page {
  background-color: #fff;
}

.header {
  color: #888;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  padding: 0 26rpx;
  box-sizing: border-box;
  background-color: #fafafa;
  border-top: 1rpx solid #ededed;
}

.productDetail {
  padding: 0 40rpx;
  background-color: #fff;
}

.productDetail .middle {
  display: flex;
  font-size: 28rpx;
  /* border-bottom: 2rpx solid #efefef; */
  padding: 40rpx 0 40rpx 0;
}

.middle .productImg {
  flex: 1;
  width: 136rpx;
  height: 136rpx;
  text-align: center;
}

.middle .productImg image {
  width: 136rpx;
  height: 136rpx;
}

.middle .productDetail {
  flex: 3;
  text-align: left;
  font-size: 24rpx;
  padding: 0 24rpx;
}

.middle .productDetail .detailText {
  color: #424242;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.middle .productDetail .specification {
  width: 369rpx;
  height: 34rpx;
  color: #888;
  font-size: 24rpx;
  margin-top: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.middle .productPrice {
  flex: 1;
  text-align: right;
}

.middle .productPrice .num {
  color: #9d9d9d;
}

.grayWrapper {
  width: 100%;
  height: 20rpx;
  background-color: #f8f8f8;
}

.refund {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.refund .icon-more {
  color: #666;
}

.refund  .left .top {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.refund  .left .top .tk {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.icon-tuikuan2, .icon-tuihuotuikuan {
  color: #212121;
  font-size: 40rpx;
  text-align: center;
}

.middleContent {
  margin: 0 6rpx;
  padding-left: 58rpx;
}

.middleContent .top {
  font-weight: 700;
  margin-bottom: 15rpx;
}

.middleContent .bottom {
  color: #888;
  font-size: 23rpx;
}
