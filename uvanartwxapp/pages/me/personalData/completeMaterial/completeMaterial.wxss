.wrapper {
  padding: 28rpx 0;
  border-bottom: 2rpx solid #e1e1e1;
}

.wrapper .text {
  color: #000;
  display: inline-block;
  width: 175rpx;
}

.iconfont {
  position: absolute;
  right: 20rpx;
}

.choose {
  position: absolute;
  right: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 60%;
  text-align: right;
}

/*公用弹框  */

.moreChoose {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color: #f2f2f2;
}

page {
  background-color: #f2f2f2;
}

.mContent {
  color: #666;
  margin-bottom: 80rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.PBWrapper {
  padding: 15rpx 4%;
  border-bottom: 2rpx solid #f2f2f2;
}

label:last-child .zlws .PBWrapper {
  border-bottom: none;
}

.PBWrapper .text {
  color: #000;
  display: inline-block;
  width: 50%;
}

checkbox {
  width: 50%;
  text-align: right;
}

checkbox .wx-checkbox-input {
  border: none;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
}

button {
  position: fixed;
  bottom: 0;
  width: 100%;
  color: #fff;
  font-size: 30rpx;
  background-color: #30b52e;
  border-radius: 0;
  height: 85rpx;
  line-height: 85rpx;
}

/*自定义  */

.mark {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.dowmModal {
  z-index: 100;
  position: fixed;
  left: 0;
  bottom: -560rpx;
  width: 100%;
  height: 560rpx;
  background-color: red;
}

.upModal {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 560rpx;
  transition: bottom ease 0.4s;
  background-color: #fff;
}

.top {
  color: #9d9d9d;
  font-size: 32rpx;
  height: 86rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e8e6e6;
}

.top .Mcancel, .top .Mensure {
  width: 150rpx;
  height: 86rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top .Mensure {
  color: #29b328;
}

.center {
  height: 474rpx;
  background-color: #fff;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.scrollWrapper {
  height: 454rpx;
  overflow: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.zlws2 {
  padding-left: 26rpx;
  font-size: 28rpx;
}
