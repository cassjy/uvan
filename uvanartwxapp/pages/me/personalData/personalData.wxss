/*老顾客领取梵豆按钮*/

.getBeanBtn {
  width: 300rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #fff;
  border: 2rpx solid #aaa;
  background-color: #917253;
}

/*阴影层  */

.shadow {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.highLight {
  z-index: 10;
  background-color: #fff;
  position: relative;
  box-sizing: border-box;
  padding: 8rpx 14rpx;
}

.content .img {
  position: absolute;
  bottom: 20%;
  left: 20%;
  width: 200rpx;
  height: 150rpx;
  z-index: 10;
  /* transform: rotate(-15deg); */
}

.content .img image {
  width: 200rpx;
  height: 150rpx;
}

.yindao {
  position: absolute;
  right: 10rpx;
  bottom: 15%;
  width: 50%;
  z-index: 10;
  line-height: 60rpx;
}

.yindao .wenben, .enSure {
  font-family: myApple;
  font-size: 30rpx;
  color: #fff;
}

.enSure {
  float: right;
  margin-right: 60rpx;
  margin-top: 30rpx;
  border: 2rpx solid #fff;
  padding: 2rpx 10rpx;
  line-height: 40rpx;
}
