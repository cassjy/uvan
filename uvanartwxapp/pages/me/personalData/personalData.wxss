/*引入字体样式  */

@font-face {
  font-family: myApple;
  src: url('https://uvpt.uvanart.com/upload/static/yingdaotu/jiantou.png');
}

page {
  background-color: #fff;
}

.header {
  color: #b6b4b4;
  font-size: 28rpx;
  padding: 40rpx 0;
  background-color: #fff;
  display: flex;
  justify-content: center;
  border-top: 1rpx solid #f2f2f2;
}

.touxiang {
  width: 160rpx;
  height: 160rpx;
}

open-data[type="userNickName"] {
  display: inline-block;
  width: 575rpx;
  color: #424242;
  box-sizing: border-box;
  text-align: right;
}

open-data[type="userAvatarUrl"] {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #fff;
  overflow: hidden;
  display: block;
}

.touxiang image {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  background-color: #fff;
}

.wrong {
  color: #ea5a70 !important;
}

.right {
  color: #28b224 !important;
}

.change {
  color: #aaa;
  font-size: 22rpx;
  margin-top: 18rpx;
}

.gradWrapper {
  width: 100%;
  height: 20rpx;
  background-color: #f4f4f4;
}

.content {
  color: #666;
  font-size: 28rpx;
  background-color: #fff;
  position: relative;
}

.phoneNum, .weixinNum, .emailNum, .name, .realName, .sex, .brithday {
  color: #888;
  font-size: 28rpx;
  padding: 0 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.wrapper {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  display: flex;
  width: 100%;
  height: 105rpx;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.wrapper .text {
  display: inline-block;
  width: 175rpx;
  box-sizing: border-box;
}

.wrapper  input {
  color: #424242;
  text-align: right;
}

.wrapper .rRight {
  color: #424242;
}

.wrapper .rdate {
  display: flex;
  flex-direction: row;
  align-items: center;
}

 .icon-more {
  color: #424242;
  margin-left: 6rpx;
  font-size: 26rpx;
}

