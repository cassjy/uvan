/* pages/mine/phonelogin/phonelogin.wxss */
.page .weixin{
  margin: 150rpx auto 0 auto;
  border: 2prx #000 solid;
  border-radius: 50%;
  padding: 0rpx;
}
.word{
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
}
.icon-weixin{
  font-size: 100rpx;
}
page{
  font-family: "SHSN"; 
}
.top-title{
  font-size: 46rpx;
  font-weight: bold;
  margin-left: 40rpx;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}
.top-title .phone-text{
  font-size: 24rpx;
  color: #aaa;
  font-weight: normal;
  margin-top: 30rpx;
}
.top-title .phone-text text{
  color: #e05a5a;
}
.b-btn{
  position: relative;
  background-color: #424242;
  color: white;
  width: 670rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 28rpx;
  border-radius: 0;
}

.b-input{
  position: relative;
  width: 670rpx;
  height: 68rpx;
  margin: 0 40rpx 0rpx 40rpx;
}
.b-input-code{
  margin-bottom: 80rpx;
  margin-top: 44rpx;
  height: 68rpx;
}
input[name="phonenum"],input[name="code"]{
  box-sizing: border-box;
  display:inline-block;
  height: 100%;
  width:670rpx;
  font-size: 24rpx;
  line-height: 90rpx;
  padding-left: 74rpx;
  vertical-align: middle;
  /*background-color: #f0f0f0;*/
  border-bottom: 1px solid #dedede;
  color: #424242;
}
input[name="code"]{
  width: 360rpx;
  height: 68rpx;
}
.iconfont{
  position: absolute;
  left: 0;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 40rpx;
  color: #ababab;
}
.getcode{
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  display: inline-block;
  width: 290rpx;
  height: 84rpx;
  margin-left:20rpx;
  line-height: 84rpx;
  text-align: center;
  color: #aaaaaa;
  font-size: 28rpx;
  border: 1px solid #888;
}
.skip{
  margin-top: 54rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  line-height: 32rpx;
  text-decoration: underline;
  color: #666;
}
.weixin{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  font-size: 60rpx;
  border: 2rpx #000 solid;
  border-radius: 50%;
  text-align: center;
}
.weixin i{
  line-height: 120rpx;
}
.register-btn{
  margin-top: 20rpx;
  display: flex;
  font-size:28rpx;
}
.register-btn span{
  flex: 1;
  font-size: 28rpx;
}
.register-btn span:nth-of-type(2){
  text-align: right;
}
.image{
  width: 100rpx;
  height: 100rpx;
}
.black-borad{
  position: absolute;
  top: 400rpx;
  left: 475rpx;
  background-color: rgba(0, 0, 0,0.2);
  width: 230rpx;
  height: 85rpx;

}

.phonenum-tip,.vcode-tip{
  position: absolute;
  right: 0;
  bottom: 0;
  color: #ed4e4e;
  font-size: 22rpx;
  line-height: 68rpx;
}
.tips{
  position: absolute;
  bottom: 56rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}
.tips text{
  color: #424242;
}

/* 弹窗样式 */
.show-btn {

  margin-top: 100rpx;

  color: #22cc22;
  font-weight: bold;

}

.modal-mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background:rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 9000;
  display: flex;
  justify-content: center;
  align-items: center;

}

.modal-dialog {

  width: 600rpx;
  margin-top: -200rpx;
  overflow: hidden;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
  color: #444;
  font-size: 28rpx;

}

.modal-title {
  padding: 20rpx;

  font-size: 28rpx;

  color: #917253;

  text-align: center;

  
  border-bottom: 1px solid #dedede;

}
.vcode-tip{
  position: absolute;
  bottom: -35rpx;
  color: #917253;
  font-size: 28rpx;
  line-height: 30rpx;
}

.modal-content {
  padding: 30rpx;
}


.modal-footer {

  display: flex;

  flex-direction: row;

  height: 86rpx;

  border-top: 1px solid #dedede;

  font-size: 28rpx;

  line-height: 86rpx;

}

.btn-cancel {

  width: 50%;

  color: #666;

  text-align: center;

  border-right: 1px solid #dedede;

}

.btn-confirm {

  width: 50%;

  color: #ec5300;

  text-align: center;

}

/* 弹窗样式 */

.phoneModal .modal-input {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  justify-content: flex-start;
  height: 60rpx;
  align-content: center;
  font-size: 26rpx;
}



.phoneModal .modal-input text:nth-of-type(1) {
  width: 130rpx;
  line-height: 60rpx;
  height: 60rpx;
}

.phoneModal  .modal-input input {
  font-size: 28rpx;
  background-color: #fafafc;
  border: 1rpx #3b3b3b solid;
  width: 280rpx;
  padding-left: 15rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.phoneModal .modal-input text{
    color: #000;
    font-weight: bold;
}
.phoneModal .getcode{
  position: relative;
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  padding-left: 30rpx;
  margin-left:30rpx;
  line-height: 60rpx;
  background-color: #f0f0f0;
  color: #888;
  font-size: 28rpx;
  vertical-align: middle;
  border: 1rpx #3b3b3b solid;
}

.warning-win{
  width: 100%;
  position: fixed;
  top: 508rpx;
}
.warning{
  width: 278rpx;
  height: 190rpx;
  background-color: rgba(0,0,0,0.5);
  text-align: center;
  border-radius: 8rpx;
  margin: 0 auto;
  position: relative;
}
.warning-width{
  width: 482rpx;
}
.warning .iconfont{
  width: 100%;
  text-align: center;
  color: #b0b0b0;
  top: 40rpx;
  left: 0;
  font-size: 54rpx;
}
.warning .warning-text{
  width: 100%;
  text-align: center;
  color: #f5f5f5;
  font-size: 32rpx;
  position: absolute;
  bottom: 30rpx;
}