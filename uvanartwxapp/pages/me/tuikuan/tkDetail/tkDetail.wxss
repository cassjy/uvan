page {
  background-color: #f5f5f5;
}

.header {
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx 15rpx 45rpx 15rpx;
  background-color: #fe8b7e;
}

.header .handle {
  margin-bottom: 20rpx;
}

.content {
  background-color: #f5f5f5;
}
.content .order{
  background-color: #fff;
  font-size: 28rpx;
  padding: 15rpx 15rpx;
  display: flex;
  justify-content: space-between;
  border-bottom:5rpx #f5f5f5 solid;
}

.content .middle {
  padding: 20rpx 40rpx 20rpx 15rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-content: center;
}

.middle .productImg {
  width: 150rpx;
  height: 150rpx;
}

.middle .productImg image {
  width: 150rpx;
  height: 150rpx;
}

.middle .productDetail {
  font-size: 26rpx;
  margin-left: 20rpx;
}

.middle .productDetail .name {
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.middle .productDetail .money{
  display: flex;
  justify-content: space-between;
}

.middle .productDetail .format {
  color: #a8a6a6;
  margin-top: 12rpx;
}

.bottom {
  color: #a8a6a6;
  font-size: 28rpx;
  padding: 15rpx 15rpx;
  margin:10rpx 0;
  background-color: #fff;
}
.bottom .money{
  display: flex;
  justify-content: space-between;
}
.bottom view{
  padding: 10rpx 0;
}
.bottom image{
  display: inline-block;
  margin: 0 15rpx;
}
.reson, .price ,.date,.num{
  margin-bottom: 16rpx;
}
