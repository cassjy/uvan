page{
	line-height: normal;
}
.detaillist{
	width: 100%;
}
.info{
	width: 100%;
	text-align: center;
	margin-top: 272rpx;
}
.info .iconfont{
	font-size: 120rpx;
	color: #ccc;
}
.info .content{
	font-size: 24rpx;
	color: #999999;
}
.section{
	position: fixed;
	top: 0;
	background: #fff;
	width: 100%;
	display: flex;
	padding:40rpx 0;
	align-items:center;
}
.jg{
	height: 180rpx;
	background: #f0f0f0;
}
.section>text{
	font-size:32rpx;
	color:#888888;
	width:8%;
	text-align:center;
}
picker{
	color:#666;
	font-size:12px;
	margin:0 auto;
}
.timest{
	display:flex;
	background:#eee;
	justify-content:center;
	align-items:center;
	width:302rpx;
	height:60rpx;
	color: #424242;
}
.timest>icon{
	margin-right: 30rpx;
	align-items:center;
	height:32rpx;
	line-height:32rpx;
	box-sizing:border-box;
	display:flex;
	color: #424242;
}
.listtitle{
	height: 108rpx;
	line-height: 108rpx;
	border-bottom: 1px solid #f8f8f8;
	display: flex;
	color: #888888;
	font-size: 28rpx;
	justify-content: space-around;
}
.list{
	width: 100%;
	color: #424242;
	height: 112rpx;
	line-height: 112rpx;
	display: flex;
	font-size: 24rpx;
}
.listtitle view,.list view{
	flex: 1;
	text-align: center;
}
.bottom{
	height: 160rpx;
}
.showsale{
	position: fixed;
	bottom:0;
	background: #fff;
	padding: 98rpx 0 40rpx;
	width: 100%;
	text-align:center;
	color:#4c9ffb;
	font-size:24rpx;
}
.mtk{
	position: fixed;
	z-index: 1;
	background-color:#000;
	width: 100%;
	height: 100vh;
	opacity: 0.5;
	top: 0;
}
.sale-content{
	position:fixed;
	z-index:2;
	background-color:#fff;
	width:80%;
	top:18%;
	border-radius:10rpx;
	right:10%;
	transition: all 0.3s;
}
.hide{
	top: 100vh !important;
	transition: all 0.3s;
}

.sale-content .title{
	text-align: center;
	padding: 4%;
	border-bottom: 1px solid #eee;
	font-size: 28rpx;
	color: #c39d62;
}
.sale-content .content{
	margin: 4% 8% 0;
	font-size: 24rpx;
	color: #333;
	text-indent: 56rpx;
}
.cancel{
	text-align:center;
	color:#1aad19;
	font-size:28rpx;
	padding:4%;
	border-top:1px solid #eee;
	margin-top:4%;
}