}
.allList .list .listitem .tips .tipstext{
	float: left;
	/*margin-right: 20rpx;*/
}
.allList .list .listitem .imglist{
	overflow: hidden;
	margin-left: 40rpx;
	margin-right: 40rpx;
	font-size: 0;
}
.allList .list .listitem .imglist .img{
	width: 210rpx;
	height: 210rpx;
	/*background-color: pink;*/
	float: left;
	margin-bottom: 20rpx;
}
.allList .list .listitem .imglist .img-margin{
	margin-right: 20rpx;
	margin-left: 20rpx;
}
.allList .list .listitem .btn{
	box-sizing: border-box;
	overflow: hidden;
	padding-bottom: 52rpx;
	padding-left: 40rpx;
	padding-right: 40rpx;
}
.allList .list .listitem .btn .savebtn{
	float: left;
	margin-right: 40rpx;
	background-color: #fff;
	padding: 0;
}
.allList .list .listitem .btn .savebtn::after {
  border: none;
}
.allList .list .listitem .btn .savebtn .wenjian{
	float: left;
	width: 48rpx;
	margin-right: 15rpx;
}
.allList .list .listitem .btn .savebtn .save{
	float: left;
	font-size: 30rpx;
	line-height: 48rpx;
	color: #424242;
}
.allList .list .listitem .btn .qrcodebtn{
	float: left;
}
.allList .list .listitem .btn .qrcodebtn .shuju{
	float: left;
	width: 48rpx;
	margin-right: 15rpx;
}
.allList .list .listitem .btn .qrcodebtn .qrcode{
	float: left;
	font-size: 30rpx;
	line-height: 48rpx;
	color: #424242;
}

/*loading*/
.loading{
	width: 100%;
	/*background-color: #fff;*/
	height: 40rpx;
	padding-bottom: 20rpx;
	position: relative;

}
.loading image{
	position: absolute;
	top: 0;
	left: 50%;
	margin-left: -100rpx; 
	width: 32rpx;
	height: 32rpx;
}
.loading text{
	font-size: 28rpx;
	position: absolute;
	top: 0;
	left: 45%;
	line-height: 40rpx;
}
/*旋转动画*/
@keyframes moveover {
  0%   {transform:rotate(0deg);}
  100% {transform:rotate(360deg);}
}
.box{
  position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -26rpx;
	margin-left: -80rpx;
  width:16px;
  height:16px;
  /*整体旋转*/
  animation:moveover 3s linear infinite;
}
.box1{
  position:absolute;
  width: 8px;
  height: 16px;
  border-radius:50px 0 0 50px;
  /* 起始最深颜色为 #999，过渡到中间颜色为 #d0cfcf */
  background: linear-gradient(#999, #d0cfcf);
  background-color: red;
  z-index:2;
}
.box2{
  position:absolute;
  width: 8px;
  height: 16px;
  border-radius:0 50px 50px 0;
  left:50%;
  /* 过渡到中间颜色为 #d0cfcf 最终末尾颜色为 #eee */
  background: linear-gradient(#eee,#d0cfcf);
  z-index:1;
}
.box3{
  position:absolute;
  width: 10px;
  height: 10px;
  top:3px;
  left:3px;
  border-radius:50%;
  background-color: #fff;
  z-index:2;
}
