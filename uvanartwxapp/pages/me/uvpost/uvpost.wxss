	/*bottom: 0;*/
	right: 40rpx;
	z-index: 10;
	margin-top: 8rpx;
}
.allList .list .listitem .tips{
	display: inline-block;
	/*width: 212rpx;*/
	height: 36rpx;
	border-radius: 100px;
	font-size: 20rpx;
	text-align: center;
	line-height: 36rpx;
	color: #aaa;
	background-color: #f0f0f0;
	margin-top: 10rpx;
	margin-bottom: 40rpx;
	margin-left: 40rpx;
	margin-right: 40rpx;
	padding-left: 18rpx;
	padding-right: 22rpx;
}
.allList .list .listitem .tips .point{
	display: inline-block;
	color: #f74656;
	/*margin-left: 18rpx;*/
	margin-right: 2rpx;
	font-size: 34rpx;
