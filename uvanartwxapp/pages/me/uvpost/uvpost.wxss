}
.allList .list .listitem .contentlist{
	margin-left: 30rpx;
	margin-right: 30rpx;
}
.allList .list .listitem .contentlist .content{
	box-sizing: border-box;
	font-size: 28rpx;
	line-height: 46rpx;
	color: #888;
