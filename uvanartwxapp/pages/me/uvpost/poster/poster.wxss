page{
	width: 100%;
	height: 100%;
	background-color: #f4f4f4;
}
.poster{
	width: 100%;
	background-color: #f4f4f4;
}
.poster swiper{
	width: 100%;
	height: 1080rpx;
	/*background-color: #f4f4f4;*/
}
.poster .swiper-item{
	box-sizing: border-box;
	padding-left: 40rpx;
	padding-right: 40rpx;
	transition: all  0.7s;
}
.poster .swiper-item2{
	/*width: 96% !important;*/
	height: 96% !important;
	padding-left: 0;
}
.poster .swiper-item-middle{
	/*width: 100% !important;*/
	text-align: center;
}
.poster .canvas{
	box-sizing: border-box;
	width: 550rpx;
	height: 980rpx;
	/*border: 1px solid #f2f2f2;*/
	/*margin-left: 30rpx; */
	margin-top: 40rpx;
	transition: all  0.5s;
	transform: scale(0.95);
	background-color: #fff;
	/*box-shadow: 0 0 45rpx rgba(38,44,37,0.2);*/
}
.poster .canvas-scale{
	transform: scale(1);
	box-shadow: 0 0 45rpx rgba(38,44,37,0.2);
}

.poster .downLoading{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background-color: #f4f4f4;
}

.poster .loading{
	width: 100%;
	height: 1080rpx;
	position: absolute;
	top: 0;
	left: 0;
	background-color: #f4f4f4;
}
 
.poster .saved-tip{
	width: 120rpx;
	height: 42rpx;
	background-color: #666;
	font-size: 22rpx;
	color: #fff;
	text-align: center;
	line-height: 42rpx; 
	position: absolute;
	top: 40rpx;
	left: 40rpx;
	transition: all 0.5s;
}
.poster .saved-tip-middle{
	left: 100rpx;
}
.poster .saved-tip-others{
	top: 65rpx;
	left: 14rpx;
}
.poster .image{
	box-sizing: border-box;
	width: 550rpx;
	height: 980rpx;
	/*margin-left: 30rpx; */
	margin-top: 40rpx;
	transition: all  0.7s;
	transform: scale(0.95);
	background-color: #fff;
}
.poster .image-scale{
	transform: scale(1);
	box-shadow: 14rpx 0 30rpx rgba(38,44,37,0.2);
	z-index: 100;
}

.poster .btn-win{
	width: 100%;
	text-align: center;
	position: absolute;
	top: 1080rpx;
	left: 0;
}
.poster .btn-win .save-btn{
	margin-top: 15rpx;
	width: 670rpx;
	height: 90rpx;
	background-color: #424242;
	font-size: 28rpx;
	font-weight: bold;
	color: #fff;
	line-height: 90rpx;
	border-radius: 0;
	margin: 0 auto;
}
.poster .btn-win .save-btn-fake{
	color: #f1f1f1;
	background-color: #ccc;
}