.header {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: fixed;
  /* top: 128rpx;
  left: 0;
  z-index: 10; */
  background-color: #fff;
}

.header .border {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 107rpx;
  color: #888;
  font-size: 28rpx;
  border-bottom: 1rpx solid #dedede;
}

.historyContent .hisFeedBack {
  padding: 167rpx 40rpx 0;
  box-sizing: border-box;
}

/* 
