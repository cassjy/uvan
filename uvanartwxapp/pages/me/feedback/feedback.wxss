.nav {
  border-top: 1rpx solid #f2f2f2;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 10;
  background-color: #fff;
}

.nav .tab {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 107rpx;
  background-color: #fff;
}

.nav .tab .navTab {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #888;
  height: 107rpx;
  line-height: 107rpx;
}

.nav .tab .navTab .borderBottom {
  color: #222;
  border-bottom: 4rpx solid #222;
}

.nav .tab .navTab text {
  height: 107rpx;
  box-sizing: border-box;
}

/*灰色块  */

.grayWrapper {
  width: 100%;
  height: 20rpx;
  background-color: #f4f4f4;
}

/*切换动画  */

.hide-body {
  transition: all 0.3s ease;
  opacity: 0;
}

.hide {
  display: none;
}

/*提交反馈意见  */

.submitContent, .historyContent {
  border-top: 1rpx solid #f2f2f2;
}

