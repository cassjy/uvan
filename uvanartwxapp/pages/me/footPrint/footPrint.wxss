.header {
  height: 80rpx;
  background-color: #f4f4f4;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
  border-top: 1rpx solid #e8e8e8;
}

/*删除按钮  */

.delete {
  width: 110rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete .icon-shanchu {
  color: #585858;
  font-size: 34rpx;
}

.delete .complete {
  color: #222;
  font-size: 24rpx;
}

.content {
  margin-top: 80rpx;
}

.marginBottom {
  margin-bottom: 90rpx;
}

.dateWrapper {
  color: #424242;
  font-size: 30rpx;
}

.rdateWrapper {
  color: #424242;
  font-size: 30rpx;
  padding-left: 70rpx;
}

.bottom {
  border-bottom: 2rpx solid #e6e6e6;
}

/* .padding{
  padding: 34rpx 0 5rpx 26rpx;
} */

.wrapper {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.rwrapper {
  padding: 0 40rpx 0 0rpx !important;
}

.wrapper .rcont {
  width: 100%;
  /* height: 263rpx; */
  box-sizing: border-box;
  padding-top: 40rpx;
}

.goodsWrapper {
  box-sizing: border-box;
}

.goods {
  color: #424242;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 36rpx 0 38rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}

.radio {
  width: 70rpx;
  height: 116rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding-right: 18rpx; */
  background-color: white;
}

.icon-radio1 {
  color: #e6e7e8;
}

.icon-radio2 {
  color: #f35c5c;
}

.radio 
.checkRadio {
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f4f7f9;
}

.checkRadio .checked {
  width: 17rpx;
  height: 17rpx;
  background-color: #f35c5c;
  border-radius: 100%;
}

.goods .goodsImg {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.goods .goodsImg image {
  width: 120rpx;
  height: 120rpx;
}

.goods .goodsInfo {
  width: 530rpx;
}

.goods  .rgoodsInfo {
  width: 500rpx;
}

.goods .goodsInfo .title {
  color: #888;
  font-size: 24rpx;
  line-height: 38rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods .goodsInfo .price {
  color: #424242;
  font-size: 23rpx;
  text-align: right;
  margin-top: 16rpx;
  padding-right: 6rpx;
  box-sizing: border-box;
}

/*底部删除模块  */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.checkAll {
  flex: 1;
  height: 96rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 19rpx;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.checkAll .all {
  margin-left: 20rpx;
}

.deteleRecords {
  flex: 1;
  height: 96rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #424242;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*暂无记录  */

.noRecord {
  color: #b6b6b6;
  font-size: 28rpx;
  position: fixed;
  top: 35%;
  left: 0;
  width: 100%;
  text-align: center;
}

.icon-dingdanguanli {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

/*没有更多了  */

.noMore {
  width: 100%;
  text-align: center;
  color: #b6b6b6;
  font-size: 24rpx;
  padding: 15rpx 0;
}
