.givingRecord {
  border-top: 1rpx solid #f2f2f2;
}

.givingRecord .header {
  width: 100%;
  height: 95rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}

.givingRecord .header .navbar {
  flex: 1;
  color: #888;
  font-size: 28rpx;
  height: 95rpx;
  line-height: 95rpx;
  box-sizing: border-box;
  font-weight: bold;
  text-align: center;
}

.givingRecord .header .selected {
  color: #424242;
  border-bottom: 4rpx solid #666;
}

.content .order-item {
  padding: 20rpx 0;
}

.content .order-item .order-number {
  padding: 0 40rpx;
}

.order-item .order-number {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #888;
  font-size: 24rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.order-item .order-number .state {
  color: #424242;
  font-size: 24rpx;
}

.order-item  .goods-detail {
  width: 100%;
  height: 170rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #f6f8fb;
}

.goods-detail .goods-img {
  width: 130rpx;
  height: 130rpx;
  margin-right: 30rpx;
}

.goods-detail .goods-img image {
  width: 130rpx;
  height: 130rpx;
}

.goods-detail .goods-text {
  color: #222;
  font-size: 24rpx;
  line-height: 42rpx;
}

.goods-detail .goods-text text {
  color: #888;
}

.goods-detail .goods-text .specifications {
  margin-bottom: 8rpx;
}

.order-item .order-time {
  color: #888;
  font-size: 24rpx;
  line-height: 44rpx;
  padding: 20rpx 40rpx 16rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  position: relative;
}
.order-item .order-time .refund{
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  width: 178rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  color: #424242;
  font-size: 24rpx;
  border: 1rpx solid #a0a0a0;
}

.grayBorder {
  width: 100%;
  height: 20rpx;
  background-color: #f4f4f4;
}

.recipient-information {
  padding: 0 40rpx;
}

.recipient-information .info-wrapper {
  padding: 18rpx 0 40rpx;
  border-bottom: 1rpx solid #eee;
}

.info-wrapper .word {
  color: #222;
  font-size: 24rpx;
  margin-bottom: 22rpx;
}

.info-wrapper .word text {
  color: #888;
}

.info-wrapper .address {
  color: #888;
  font-size: 24rpx;
}
