.refundSuccess {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #f2f2f2;
}

.refundSuccess image {
  width: 240rpx;
  height: 200rpx;
  margin-top: 130rpx;
}

.refundSuccess .text {
  color: #424242;
  font-size: 34rpx;
  font-weight: bold;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 10rpx;
}

.refundSuccess .text-info {
  color: #b2b2b8;
  font-size: 28rpx;
  margin-top: 4rpx;
}

.refundSuccess .btn {
  width: 100%;
  height: 96rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 110rpx;
}

.refundSuccess .btn button {
  color: #fff;
  font-size: 28rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 60rpx;
  background-color: #424242;
}

.refundSuccess .contactCustomer{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 25rpx;
}
.refundSuccess .contactCustomer button{
  background-color: #fff;
}
.refundSuccess .contactCustomer button::after{
  border: none;
}

.refundSuccess .contactCustomer text{
  color: #424242;
  font-size: 28rpx;
  text-decoration: underline;
}