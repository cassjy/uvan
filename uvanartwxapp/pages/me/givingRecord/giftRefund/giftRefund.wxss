.giftRefund {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-top: 1rpx solid #e8e8e8;
  background-color: #f4f4f4;
}

.giftRefund   .goods-detail {
  width: 100%;
  height: 170rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  background-color: #fff;
}

.goods-detail .goods-img {
  width: 130rpx;
  height: 130rpx;
  margin-right: 30rpx;
}

.goods-detail .goods-img image {
  width: 130rpx;
  height: 130rpx;
}

.goods-detail .goods-text {
  color: #222;
  font-size: 24rpx;
  line-height: 42rpx;
}

.goods-detail .goods-text text {
  color: #888;
}

.goods-detail .goods-text .specifications {
  margin-bottom: 8rpx;
}

.giftRefund .refund-price-text {
  padding: 18rpx 40rpx 0;
  color: #888;
  font-size: 24rpx;
  height: 62rpx;
  line-height: 58rpx;
}

.giftRefund  .refund-price-num {
  color: #222;
  font-size: 24rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.btn {
  position: fixed;
  z-index: 1;
  left: 0;
  bottom: 0;
  color: #fff;
  font-size: 28rpx;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn .left, .btn .right {
  flex: 1;
}

.btn .left button {
  color: #424242;
  font-size: 28rpx;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #fff !important;
}

.btn .left button::after {
  border-radius: none !important;
  border: none !important;
}

.btn .right {
  background-color: #424242;
  text-align: center;
}


