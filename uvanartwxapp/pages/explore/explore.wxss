page{
	height: 100%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.header{
	position: fixed;
	width: 100%;
	z-index: 90;
	/*display: flex;*/
	/*flex-direction: row;*/
	/*text-align: center;*/
	padding-bottom: 6rpx;
	background:#fff;
}
.container{
	position: relative;
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.header .scan{
	/*flex:1;*/
	display:flex;
	flex-direction:column;
	font-size:20rpx;
	padding-top: 16rpx;
	color: #666666;
	float: left;
	margin-right: 40rpx;
}
.header .scan .iconfont, .header .msg .iconfont{
	font-size:36rpx;
}
.header .msg{
	flex:1;
	font-size:20rpx;
	padding-top: 30rpx;
}
.header .msg button{
	box-sizing: border-box;
  text-align: center;
  width: 100%;
  color: #000;
  font-size: 30rpx;
  line-height:1;
  background-color: #fff;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
}
.header .msg button::after{
  border: 0;
}
/*search bar*/
.header .search{
	width: 570rpx;
	/*flex:4;*/
	display:flex;
	align-items:center;
	height:60rpx;
	line-height:60rpx;
	font-size:26rpx;
	margin-top:16rpx;
	/*border-radius:8rpx;*/
	box-sizing:border-box;
	background-color:#eaeaea;

	/*position: relative;*/
}
.header .search .searchBtn{
	padding-left: 20rpx;
	width:100%;
	height:60rpx;
	min-height:1;
	line-height:60rpx;
	text-align:left;

	/*float: left;*/
}
.header .search .icon-sousuo1{
	font-size:28rpx;
	height:60rpx;
	line-height:60rpx;
	text-align:center;
	margin-left:20rpx;
	margin-right:20rpx;
	color: #646464;
}
.header .search .sBtn{
	box-sizing: border-box;
	font-size: 28rpx;
	text-align: center;
	float: right;
	/*height: 100%;*/
	width: 10%;
	position: relative;
	top: 6rpx;
}

/* nav bar */
.navBar{
	box-sizing: border-box;
	position: fixed;
	top: 82rpx;
	width: 100%;
	display: flex;
	flex-direction: row;
	font-size: 28rpx;
	text-align: center;
	z-index: 90;
	border-bottom: 1px solid #dedede;
}
.navBar .navCate, .navBar .navStyle{
	box-sizing: border-box;
	padding-left: 152rpx;
	padding-right: 152rpx;
	flex: 1;
	/*padding-bottom: 10rpx;*/
	background-color: #fff;
	color: #888888;
	height: 76rpx;
	line-height: 76rpx;
}
.navBar .navCate-name, .navBar .navStyle-name{
	box-sizing: border-box;
	height: 100%;
	
}
.navBar .borderBottom{
	color: #222;
	border-bottom: 4rpx solid #222222;
}
.main{
	box-sizing: border-box;
	padding-top: 160rpx;
	width: 100%;
	height: 100%;
}
.main .leftScroll{
	box-sizing: border-box;
	height: 100%; 
	float: left;
	width: 21.33%;
	background-color: #f7f8fa;
}
.main .left{
	box-sizing: border-box;
	width: 100%;
	/*height: 100%;*/
	background-color: #f7f8fa;
	overflow: auto;
}
.main .left .cate{
	box-sizing: border-box;
	width: 100%;
	padding-left: 18rpx;
	padding-right: 18rpx;
	font-size: 26rpx;
	/*text-align: center;*/
	height: 104rpx;
	line-height: 104rpx;
	color: #666666;
}
.main .left .cate .catename{
	box-sizing: border-box;
	height: 100%;
	padding-left: 22rpx;
	border-bottom: 1px solid #dedede;
}
.main .left .select{
	background-color: #fff;
}
.main .rightScroll{
	float: right;
	width: 78.67%;
	height: 100%;
}
.main .right{
	box-sizing: border-box;
	width: 100%;
	padding: 40rpx 40rpx;
	overflow: hidden;
}
.main .right .ad{
	font-size: 0;
	margin-bottom: 40rpx;
}
.main .right .ad .image{
	width: 510rpx;
}
.main .right .toAll{
	float: right;
	color: #888;
	font-size: 28rpx;
}
.main .right .toAll .iconfont{
	float: right;
	font-size: 36rpx;
}
.main .right .toAll .all{
	float: right;
}
.main .right .cateContent{
	width: 235rpx;
	height: 186rpx;
	margin-bottom: 40rpx;
	text-align: center;
}
.main .right .cateContent image{
	width: 150rpx;
	height: 150rpx;
}
.main .right .cateContent .cateChild{
	height: 24rpx;
	line-height: 24rpx;
	font-size: 26rpx;
	text-align: center;

	text-overflow: ellipsis;  
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1; 
	overflow: hidden;
}
.main .right .hiddenCateChild{
	display: none;
}
.fLeft{
	float: left;
}
.fRight{
	float: right;
}