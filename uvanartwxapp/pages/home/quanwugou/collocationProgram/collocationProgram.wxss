.collocationProgram {
  padding: 40rpx 40rpx 136rpx;
  border-top: 1rpx solid #f2f2f2;
}

.title {
  color: #222;
  font-size: 34rpx;
  font-weight: bold;
}

.etitle {
  color: #ababab;
  font-size: 24rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-bottom: 28rpx;
}

.productImg {
  width: 100%;
  /* height: 375rpx; */
  font-size: 0;
  margin-bottom: 80rpx;
}

.productImg image {
  width: 100%;
  height: 375rpx;
  margin-bottom: 40rpx;
}
.productImg image:last-child{
  margin-bottom: 0;
}

.goodList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
}

.goodList .good {
  width: 315rpx;
  margin-right: 38rpx;
}

.good  .goodImg {
  width: 100%;
  height: 315rpx;
  border: 1rpx solid #ececec;
  margin-bottom: 20rpx;
}

.good  .goodImg image {
  width: 100%;
  height: 100%;
}

.good:nth-of-type(2n) {
  margin-right: 0;
}

.good .goodName {
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 42rpx;
  color: #888;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 18rpx;
}

.good .goodPrice {
  color: #222;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 35rpx;
}
.tobuy{
   position: fixed;
   left: 0;
   bottom: 0;
   color: #fff;
   font-size: 28rpx;
   width: 100%;
   height: 96rpx;
   line-height: 96rpx;
   text-align: center;
   background-color: #424242;
}