.specification {
  margin-bottom: 96rpx;
  border-top: 1rpx solid #f2f2f2;
}

.specification .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 112rpx;
  line-height: 112rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: #fafafa;
}

.specification .phoneClass {
  padding-bottom: 96rpx;
}

.header .left {
  font-size: 34rpx;
  font-weight: bold;
}

.header .right {
  color: #888;
  font-size: 28rpx;
}

.good {
  padding: 60rpx 40rpx 40rpx;
}

.good .good-info {
  display: flex;
 flex-direction: row;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.good-info .good-img {
  width: 190rpx;
  height: 190rpx;
  font-size: 0;
  margin-right: 20rpx;
}
.good-info .good-detail{
  width: 460rpx;
}

.good-info .good-img image {
  width: 190rpx;
  height: 190rpx;
}

.good-info .good-detail .good-name {
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 38rpx;
  color: #ababab;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.good-detail .good-price {
  color: #f35c5c;
  font-size: 26rpx;
  font-weight: bold;
  margin: 11rpx 0;
}

.good-detail .good-price text {
  font-size: 20rpx;
}

.good-detail .selectedSpecifications {
  font-size: 24rpx;
  color: #ababab;
}

.good-detail .selectedSpecifications text {
  color: #424242;
  line-height: 34rpx;
}

.specification-title {
  color: #424242;
  font-size: 30rpx;
  margin-bottom: 24rpx;
}

.specification-select {
  color: #666;
  line-height: 34rpx;
  font-size: 24rpx;
  padding: 14rpx 20rpx;
  box-sizing: border-box;
  background-color: #fafafa;
  margin-bottom: 20rpx;
}

.specification-select:last-child {
  margin-bottom: 0;
}

.selected {
  color: #fff;
  background-color: #424242;
}

.whiteSpace {
  width: 100%;
  height: 20rpx;
  background-color: #fafafa;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #f8f8f8;
}

.footer .selectNum {
  width: 340rpx;
  height: 96rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #dedede;
}

.footer .selectNum .selectNum-title {
  color: #888;
  font-size: 28rpx;
}

.footer .selectNum .stepper {
  height: 40rpx;
  font-size: 26rpx;
}

.footer .selectNum .stepper text {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  float: left;
  background-color: #ddd;
}

.footer .selectNum .stepper input {
  color: #888;
  width: 40rpx;
  min-height: 40rpx !important;
  height: 40rpx !important;
  line-height: 40rpx;
  float: left;
  margin: 0 auto;
  margin-left: 2rpx;
  margin-right: 2rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.footer .selectNum .stepper .normal {
  color: #fff;
  background-color: #666;
}

.footer .selectNum .stepper .disabled {
  color: #fff;
}

.footer .middle {
  color: #424242;
  font-size: 24rpx;
  width: 150rpx;
  height: 96rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.footer .middle .icon-gouwuche2 {
  font-size: 42rpx;
  margin-bottom: 4rpx;
}

.footer .right {
  color: #fff;
  font-size: 28rpx;
  width: 360rpx;
  height: 96rpx;
  background-color: #424242;
  display: flex;
  justify-content: center;
  align-items: center;
}

.changeColor{
  background-color: #f2f2f2 !important;
}