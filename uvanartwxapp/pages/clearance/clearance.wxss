.wrapper{
	background-color: #eee;
}
/*头部*/
.head{
	/*background-color: #fff;*/
}
.head .image{
	width: 750rpx;
	height: 350rpx;
}
/*中间文案*/
.midtext{
	position: relative;
	box-sizing: border-box;
	width: 100%;
	height: 234rpx;
	font-size: 24rpx;
	/*line-height: 50rpx;*/
	color: #888;
	background-color: #fff;
	margin-bottom: 10rpx;
	padding-left: 40rpx;
	padding-top: 20rpx; 
}
.midtext .image{
	float: left;
	width: 140rpx;
	height: 193rpx;
}
.midtext .image2{
	/*box-sizing: border-box;*/
	float: left;
	width: 186rpx;
	height: 186rpx;
	margin-left: 20rpx;
	margin-top: 4rpx;
	background-color: #f9f9f9;
}
.midtext .image3{
	position: absolute;
	top: 50%;
	right: 0;
	margin-top: -28rpx;
	width: 86rpx;
	height: 56rpx;
}
.midtext .name-price{
	float: left;
	box-sizing: border-box;
	width: 220rpx;
	padding-top: 24rpx;
	margin-left: 20rpx;
	font-size: 26rpx;
	color: #000;		
}
.midtext .name-price .product-name{
	/*显示两行，超过省略号*/
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;	
}
.midtext .name-price .product-price{
	margin-top: 30rpx;
}
.midtext .name-price .product-price .new-price{
	float: left;
	color: #f23352;
}
.midtext .name-price .product-price .old-price{
	float: left;
	margin-left: 10rpx;
	color: #888;
	text-decoration: line-through;
}
/*商品列表*/
/*列表头*/
.listhead{
	width: 750rpx;
	height: 70rpx;
	display: flex;
	flex-direction: row;
	background-color: #fff;
	margin-bottom: 10rpx;
}
.listhead .listname{
	flex: 1;
	height: 70rpx;
	font-size: 28rpx;
	font-weight: 500;
	line-height: 70rpx;
	text-align: center;
	color: #666;
}
/*标签选中状态*/
.listhead .red{
	color: #e8364c;
}
/*列表*/
.list{
	margin-bottom: 10rpx;
	overflow: hidden;
	background-color: #fff;
}
.list .productbox{
	box-sizing: border-box;
	width: 100%;
	padding: 8rpx 20rpx;
	background-color: #fff;
}
.list .productbox .leftbox{
	float: left;
	width: 30%;
}
.list .productbox .leftbox .image{
	width: 300rpx;
	height: 300rpx;
	background-color: #fff;
}
.list .productbox .rightbox{
	float: right;
	width: 50%;
	padding-left: 40rpx;
	/*padding-top: 40rpx;*/
}
.list .productbox .rightbox .name{
	font-size: 28rpx;
	font-weight: 500;
	color: #000;
}
.list .productbox .rightbox .name2{
	font-size: 26rpx;
	color: #888;
}
.list .productbox .rightbox .price{
	margin-top: 10rpx;
	overflow: hidden;
}
.list .productbox .rightbox .price .price1{
	float: left;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 24rpx;
	vertical-align: middle;
}
.list .productbox .rightbox .price .price1 .p1{
	display: inline-block;
	height: 50rpx;
	line-height: 50rpx;
	color: #e8364c;
	font-size: 32rpx;
}
.list .productbox .rightbox .price .price1 .p2{
	display: inline-block;
	height: 50rpx;
	padding-left: 10rpx;
	font-size: 22rpx;
	color: #888;
	text-decoration: line-through;
}
.list .productbox .rightbox .btn{
	margin-top: 20rpx;
}
.list .productbox .rightbox .btn .btn1{
	float: left;
	height: 40rpx;
	line-height: 40rpx;
	padding-left: 20rpx;
	padding-right: 20rpx;
	border: 2rpx solid #e8364c;
	border-radius: 20rpx;
	font-size: 24rpx;
	color: #e8364c;
}
.list .productbox .rightbox .btn .btn2{
	float: left;
	height: 50rpx;
	line-height: 50rpx;
	padding-left: 26rpx;
	padding-right: 26rpx;
	background-color: #e8364c;
	border: 2rpx solid #e8364c;
	border-radius: 30rpx;
	font-size: 24rpx;
	color: #fff;
	/*margin-left: 20rpx;*/
}
