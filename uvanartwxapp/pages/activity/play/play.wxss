}

/* 无缝滚动 */
@keyframes rowup {
    0% {
        -webkit-transform: translate3d(0, 100px, 0);
        transform: translate3d(0, 100px, 0);
    }
    100% {
        -webkit-transform: translate3d(0, -100px, 0);
        transform: translate3d(0, -100px, 0);
        display: none;
    }
}
.board-body{
    text-align: center;
    font-size: 28rpx;
    line-height: 38rpx;
    color: #3b3b3b;
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 200rpx;
}

 .board-body .prize{
    -webkit-animation: 6s rowup linear infinite normal;
    animation: 6s rowup linear infinite normal;
    position: relative;
    padding:10rpx 0;

} 

