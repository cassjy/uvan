/* 中奖榜单 */
.rule {
  height: 560rpx;
  width: 690rpx;
  background-color: #f8f8f8;
  margin: 38rpx auto;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
}
.rule-head{
  width: 100%;
  height: 125rpx;
  line-height: 125rpx;
  text-align: center;
  background-color: #f8f8f8;
  color: #424242;
  border-radius: 10rpx 10rpx 0 0;
  overflow: hidden;
  font-weight: bold;
}
.rule-body{
  text-align:left;
  font-size: 28rpx;
  line-height: 38rpx;
  padding: 0 24rpx;
  color: #3b3b3b;
}
.rule-body>view{
  height: 50rpx;
  width: 100%;
  line-height: 50rpx;
  font-size: 22rpx;
}
.rule-body>view text:first-child{
  width: 144rpx;
  display: inline-block;
}
.rule-body>view text:nth-child(2){
  letter-spacing: 22rpx;
}
.rule-body>view text:nth-child(3){
  color: #888;
}
.colon-1{
  letter-spacing: 13rpx;
  color: #c2c2c2;
}
.colon-2{
  letter-spacing: 13rpx;
  color: #121212;
}
.rule-title{
  font-size: 34rpx;
  color: #424242;
  display: inline-block;
  width: 218rpx;
}
.space{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}
/* 底部注释 */
.footer{
  margin:0 54rpx 70rpx 54rpx;
  font-size: 24rpx;
}
.footer>text:nth-child(1){
  color: red;
}
.footer>text:nth-child(2){
  color: white;
  letter-spacing: 12rpx;
}
.footer>text:nth-child(3){
  color: #9a9a9a;
}
/* 无缝滚动 */
@keyframes rowup {
    0% {
        -webkit-transform: translate3d(0, 100px, 0);
        transform: translate3d(0, 100px, 0);
    }
    100% {
        -webkit-transform: translate3d(0, -100px, 0);
        transform: translate3d(0, -100px, 0);
        display: none;
    }
}
.board-body{
    text-align: center;
    font-size: 28rpx;
